<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">
    <ImageView
        android:layout_marginTop="100dp"
        android:id="@+id/download"
        android:visibility="gone"
        android:src="@drawable/white_download"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <iwinux.com.music.VideoViewFull
        android:visibility="gone"
        android:id="@+id/video_full"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout
    android:visibility="gone"
    android:id="@+id/end"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Начните прослушивание после выбора"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/lk"
        android:layout_width="250dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/bg_pay"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/mo_ad"
        android:layout_height="40dp" />
    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/premium"
        android:background="@drawable/bg_pay"
        android:layout_width="250dp"
        android:foreground="?attr/selectableItemBackground"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/promokod"
        android:layout_height="40dp"
        />
    <TextView
        android:id="@+id/skip"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:padding="10dp"
        android:text="Пропустить"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
<ProgressBar
    android:layout_marginTop="15dp"
    android:visibility="gone"
    android:id="@+id/progress_bar"
    android:layout_width="40dp"
    android:layout_height="40dp" />
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_marginTop="50dp"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:orientation="vertical">
            <TextView

                android:gravity="center"
                android:id="@+id/holderText"
                android:textStyle="normal"
                android:text="Смотри и делись"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView

                android:layout_marginBottom="90dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/text"
                android:text="Неероятные функции, которые поражают воображение"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:background="@drawable/bd_alert"
        android:layout_width="match_parent"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginEnd="40dp"
        app:cardCornerRadius="15dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout

                android:background="@color/gray_light"
                android:layout_width="match_parent"
                android:clickable="true"
                android:paddingEnd="30dp"
                android:padding="10dp"

                android:id="@+id/click"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center|left"
                android:layout_height="wrap_content">
                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView

                        android:layout_width="50dp"
                        app:cardElevation="0dp"

                        app:cardBackgroundColor="#0000"
                        app:cardCornerRadius="5dp"
                        android:layout_height="50dp">
                        <ImageView
                            android:id="@+id/preview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/test"
                            />
                    </android.support.v7.widget.CardView>

                </RelativeLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical"
                    android:gravity="center|left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/Title"
                        android:textStyle="normal"
                        android:textSize="15sp"
                        android:textColor="#000"
                        android:text="Пам пам пам!"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="3dp"
                        android:id="@+id/Artist"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        android:textColor="@color/gray"
                        android:text="MORGENSHTERN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                    <ImageView
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/download"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:src="@drawable/download"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/like"
                        android:src="@drawable/like_outline"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/in_artist"
                android:textStyle="normal"
                android:gravity="center"
                android:textSize="20dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/gray"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Перейти к исполнителю"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <LinearLayout
                android:id="@+id/addQouin"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:gravity="center"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_round_playlist_play_24px"
                   android:layout_marginRight="5dp"
                   android:tint="@color/gray"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:textStyle="normal"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/gray"
                    android:textAlignment="center"
                    android:text="Воспроизвести далее"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/cancel"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:background="@color/white"

                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/gray"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Отмена"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>